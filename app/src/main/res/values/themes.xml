<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LetsTalk" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item> <!-- Your desired color -->
    </style>
    <style name="Theme.LetsTalk" parent="Base.Theme.LetsTalk" />



<!--    for the splashscreen-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.LetsTalk</item>
    </style>



<!--    for the mainactivity-->
    <style name="StatusBarMainActivity" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item> <!-- Your desired color -->
    </style>

</resources>